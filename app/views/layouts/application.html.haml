!!!
%html
  %head
    %title Notes
    = stylesheet_link_tag "application"
    = csrf_meta_tag
  %body
    %header
      %h1
        Notes
      %input#btn-addNote{type: "button", value: "Add Note"}

    = yield

    = javascript_include_tag "application"

    %script{type: "text/template", id: "note-template"}
      .toolbar
        %div{contenteditable: "", class: "title"}
          <%= title %>
        %span.delete{title: "close"} X
      .editable{contenteditable: ""}
        <%= content %>

    = yield :javascript

  %footer
